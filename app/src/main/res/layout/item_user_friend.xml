<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearUser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_24pxv"
    android:layout_marginStart="@dimen/_10pxh"
    android:layout_marginEnd="@dimen/_20pxh"
    android:gravity="start"
    android:weightSum="1"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageAvatarUserSearch"
        android:layout_width="@dimen/_60pxh"
        android:layout_height="@dimen/_60pxh"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"
        tools:src="@drawable/img_image" />

    <TextView
        android:id="@+id/txtUserNameSearch"
        style="@style/txtRobotoregular15_1"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/_10pxh"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1pxv"
        android:layout_weight="1"
        android:ellipsize="end"
        android:letterSpacing="0.05"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:singleLine="true"
        android:text="@string/lbl_maciej_kowalski"
        tools:text="@string/lbl_maciej_kowalski" />
    <TextView
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_marginStart="@dimen/_10pxh"
        android:id="@+id/btnAddFriend"
        style="@style/btnSolidRounded"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:text="Friend request"
        android:layout_height="@dimen/_30pxh"/>


</LinearLayout>
